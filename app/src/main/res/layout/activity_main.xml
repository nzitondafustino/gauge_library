<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.custom.gauge.Gauge
        android:id="@+id/arc_voltage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:background="#14997e"
        custom:arc_bottom_text="Volts"
        custom:arc_bottom_text_size="20sp"
        custom:arc_finished_color="#ffce69"
        custom:arc_max="180"
        custom:arc_progress="100"
        custom:arc_suffix_text=""
        custom:arc_suffix_text_padding="15dp"
        custom:arc_text_color="#f8fbff"
        custom:arc_unfinished_color="#4fb4a0"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintVertical_bias="0.498"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>